<div {{ stimulus_controller('@pwa/install')|stimulus_controller('live') }} {{ attributes }} class="card bg-base-100 shadow-md p-6 space-y-4 w-full max-w-md mx-auto">
    {% if this.status == 'installed' %}
        The application is already installed.
    {% elseif this.status == 'cancelled' %}
        You cancelled the installation.
    {% elseif this.status == 'installing' %}
        You clicked on the installation button.
    {% elseif this.status == 'not-installed' %}
    <button
        {{ stimulus_action('@pwa/install', 'install', 'click') }}
        class="text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-500 dark:hover:bg-blue-600 dark:focus:ring-blue-800"
    >
        Install this app
    </button>
    {% endif %}
</div>
