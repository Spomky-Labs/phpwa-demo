{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "Météo dans la ville de \"${name}\""
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "style": "Person",
                            "url": "https://openweathermap.org/img/wn/${weather[0].icon}@2x.png",
                            "size": "Small"
                        }
                    ],
                    "width": "auto"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "weight": "Bolder",
                            "text": "${weather[0].description}",
                            "wrap": true,
                            "horizontalAlignment": "Left"
                        }
                    ],
                    "width": "stretch",
                    "height": "stretch"
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "* Température : ${main.temp}°C (ressentie :  ${main.feels_like}°C)\r* Min/Max : ${main.temp_min}°C / ${main.temp_max}°C\r* Humidité : ${main.humidity}%\r* Pression : ${main.pressure}Pa",
            "wrap": true
        }
    ],
    "actions": [
        {
            "type": "Action.OpenUrl",
            "title": "En savoir plus",
            "url": "${viewUrl}"
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5"
}