{% extends 'base.html.twig' %}

{% block title %}Badge{% endblock %}

{% block body %}
<turbo-frame id="content">
    <section
        class="bg-white dark:bg-gray-900"
        {{ stimulus_controller('@pwa/badge') }}
        {{ stimulus_action('@pwa/badge', 'update', 'turbo:load@window', {counter: random(1, 100)}) }}
    >
        <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6 ">
            <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">
                Badge
            </h2>
            <p
                class="mb-3 font-light text-gray-500 dark:text-gray-400 sm:text-xl"
            >
                The Badge API allows you to display a badge on your website. <br>
                Please note that this feature is only available when the application is installed.
            </p>
            <button
                class="text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center me-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800"
                {{ stimulus_action('@pwa/badge', 'clear', 'click') }}
            >
                <twig:ux:icon name="mdi:clear-bold" class="w-3.5 h-3.5 me-2" fill="currentColor" />
                Clear
            </button>
        </div>
    </section>
</turbo-frame>
{% endblock %}
